<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout style="@style/AlertDialog.AppCompat"  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout style="@style/AlertDialog.AppCompat" android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AlertDialog.AppCompat"
                android:text="最新版本检测"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_drop_down"
                style="@style/AlertDialog.AppCompat.Light"
                android:src="@drawable/shanglan" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="篮球教学是款非盈的产，旨在贡献于喜欢热爱篮球的小伙伴们"
        android:textSize="12sp"
        android:textStyle="normal"

        />
</LinearLayout>